[include]
  path = ~/.gitconfig-local

# linux
[gpg]
  program = qubes-gpg-client-wrapper
[credential]
	helper = cache --timeout=7200

# windows
[core]
  sshCommand = C:/Windows/System32/OpenSSH/ssh.exe
[gpg]
  program = C:/Program Files (x86)/GnuPG/bin/gpg.exe

# shared
[init]
	defaultBranch = main
[core]
	editor = nvim
	longpaths = true
[filter "lfs"]
  clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[color]
	ui = auto
[commit]
	gpgSign = true
[tag]
	gpgsign = true
[diff]
	ignoreSubmodules = dirty
[push]
  followTags = true
[alias]
	s = status
	a = add
	aa = add --all
	ac = commit -am
	c = commit -m
	f = fetch --all
	u = pull
	p = push
	o = checkout
	d = diff
  l = log
